<?php

print "\n Digite o primeiro número: ";
$n1 = (float) fgets (STDIN);

print "\n Digite o segundo número: ";
$n2 = (float) fgets (STDIN);

if ($n1 > $n2) {
    print "\n O maior número é: $n1 \n\n";
}

elseif ($n2 > $n1) {
    print "\n O maior número é: $n2 \n\n";
}

else {
    echo "\n Os números são iguais \n\n";
}
